{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "verificationToken",
    "random"
  ],
  "properties": {
    "email": {
      "type": "string",
      "required": true
    },
    "username": {
      "type": "string",
      "required": true
    },
    "random": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "libraries": {
      "type": "hasMany",
      "model": "library",
      "foreignKey": "userId",
      "through": "book"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "inputValidator"
    }
  ],
  "methods": {
    "rotate": {
      "isStatic": false,
      "http": {
        "verb": "post"
      }
    },
    "inputValidator": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "email",
          "type": "string",
          "required": true
        }
      ],
      "returns": [
        {
          "arg": "email",
          "type": "boolean"
        }
      ],
      "http": {
        "verb": "post"
      }
    }
  }
}
